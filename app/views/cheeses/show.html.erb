<h1><%= @cheese.name %></h1>
<span>Age: <%= @cheese.age %></span>
<p>Description: <%= @cheese.description %></p>


<%= form_for [@cheese, @review] do |f| %>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </div>

  <div class="field">
  <%= f.label :body %><br />
  <%= f.text_area :body, size: '60x12' %>
  </div>

  <div class="actions">
    <%= f.submit "Add Review"%>
  </div>
<% end %>
