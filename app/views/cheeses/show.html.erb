<h1><%= @cheese.name %></h1>
<span>Age: <%= @cheese.age %></span>
<p>Description: <%= @cheese.description %></p>

<div>
    <% unless @reviews.nil? %>
      <h2>Reviews:</h2>
      <ul>
        <% @reviews.each do |review| %>
          <li>
            <p>Rating: <%= review.rating %></p>
            <% unless review.body.empty? %>
              <p>Comment: <%= review.body %></p>
            <%  end %>
          </li>
        <% end %>
      <% end %>
    </ul>
</div>

<% if current_user %>
  <%= form_for [@cheese, @review] do |f| %>
    <div class="field">
      <%= f.label :rating, 'Add Rating' %><br />
      <%= f.text_field :rating %>
    </div>

    <div class="field">
    <%= f.label :body, 'Add Comment' %><br />
    <%= f.text_area :body, size: '60x12' %>
    </div>

    <div class="actions">
      <%= f.submit "Add Review" %>
    </div>
  <% end %>
<% end %>
