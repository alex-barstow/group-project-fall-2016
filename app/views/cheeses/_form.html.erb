<%= form_for(@cheese) do |f| %>

  <div class="field">
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :age, "Age" %><br />
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Image" %><br />
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Cheese" %>
  </div>
<% end %>
