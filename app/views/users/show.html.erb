<div class="row">
  <div class="columns small-8">
    <h4><%= @user.user_name %></h4>
    <p>Name: <%= @user.first_name %> <%= @user.last_name %></p>
    <p>Email: <%= @user.email %></p>
  </div>
  <div class="columns small-4">
    <img src="<%= @user.avatar %>" id="#profile-avatar" />
  </div>
</div>

